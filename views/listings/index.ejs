<% layout("/layouts/boilerplate") %>

    <body>

        <style>
            .filters {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                align-items: center;
            }

            .filter {
                text-align: center;
                margin-right: 2rem;
                margin-top: 2rem;
                opacity: 0.7;
                font-size: 0.8rem;
            }

            .filter:hover {
                opacity: 1;
                /* border-bottom : 2px solid black; */
                cursor: pointer;
            }

            .tax-info {
                display: none;
            }

            .tax-toggle { 
                height : 50px;
                width  : 200px;
                border : 1px solid rgba(0, 0, 0, 0.308);
                border-radius : 1rem;
                display : flex;
                align-items : center;
                justify-content : center;
            }

            .toggle {
                display : flex;
                align-items : center;
                column-gap : 11.5rem;
            }
        </style>
        <div class="toggle">
        <div class="filters">
            <div class="filter"><i class="fa-solid fa-fire-flame-curved"></i>
                <p>Trending</p>
            </div>

            <div class="filter"><i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>

            <div class="filter"><i class="fa-solid fa-mountain-city"></i>
                <p>Iconic cities</p>
            </div>

            <div class="filter"><i class="fa-solid fa-mountain-sun"></i>
                <p>Mountains</p>
            </div>

            <div class="filter"><i class="fa-solid fa-umbrella-beach"></i>
                <p>Beaches</p>
            </div>

            <div class="filter"><i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pools</p>
            </div>

            <div class="filter"><i class="fa-solid fa-tree"></i>
                <p>Camping</p>
            </div>

            <div class="filter"><i class="fa-solid fa-tractor"></i>
                <p>Farms</p>
            </div>

            <div class="filter"><i class="fa-solid fa-igloo"></i>
                <p>Arctic</p>
            </div>

            <div class="filter"><i class="fa-solid fa-person-swimming"></i>
                <p>Amazing pools</p>
            </div>

        </div>
        
        <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Show price with Tax</label>
        </div>
        </div>

        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-3">
            <% for(hotel of hotels) { %>
                <div class="col">
                    <a class="indexa" href="/show/<%=hotel._id%>">
                        <div class="card card-listing" style="width: 24.rem;">
                            <img src="<%=hotel.image.url%>" class="card-img-top" alt="listing-imaged"
                                style="height: 20rem;">
                            <div class="card-body">
                                <p class="card-text"><b>
                                        <%=hotel.title%>
                                    </b>
                                </p>
                                <p>&#8377;<B><%=hotel.price.toLocaleString("en-IN")%>/night </B><I class="tax-info">+
                                        18% GST</I></p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    </body>

    <script>
        let checkbox = document.querySelector("#switchCheckDefault");

        checkbox.addEventListener("click", () => {
            let gst = document.getElementsByClassName("tax-info");

            for (info of gst) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                }
                else {
                    info.style.display = "none";
                }
            }
        });

    </script>