<% layout("/layouts/boilerplate.ejs") %>

    <div class="row" style="height: 74vh;">
        <form method="post" class="needs-validation" action="/signup" novalidate>
            <div class="col-6 offset-3">
                <h1 style="margin : 1rem 1rem 1rem 0;">Sign up</h1>

                <div class="mb-3">
                    <label for="title" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" required>

                    <div class="valid-feedback">
                        Looks Good
                    </div>

                    <div class="invalid-feedback">
                        Please enter username
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="mb-3 col-6 offset-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter email
                    </div>
                </div>
            </div>

            <div class="mb-3 col-6 offset-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter password
                </div>
                <button style="margin-bottom : 1rem;" class="btn btn-dark mt-3">Sign up</button>
            </div>

        </form>
    </div>
